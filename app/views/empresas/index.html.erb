<script type="text/javascript">
  //valor 0: No muestra el id del objeto en las b√∫squedas
  //valor 1: Lo muestra
  var config_show_num_ids = 1; //<= Setting.show_num_ids %> ;

  $( "#filtro_empresa" ).autocomplete({
    source: function( request, response ) {
      $.ajax({
        url: "empresas.json?filtro="+request.term,
        success: function( data ) {
          data = data.empresas
          if(data.length == 0){
            data = [{
                id :-1
              }];
          }
          response( $.map( data, function( item ) {
            if (item.id == -1){
              return {
                label: "no se encotraron resultados" ,
                value: request.term,
                id :item.id
              }
            }else{
                if(config_show_num_ids == 1){
                  return {
                    label: "<" + item.id + ">" + item.nombre,
                    value: item.nombre,
                    id :item.id
                  }
                }else{
                   return {
                    label: item.nombre,
                    value: item.nombre,
                    id :item.id
                  }
                }
            }
          })
        ); 
        },
        error: function( xhr, status, index, anchor ) {
          return {
            label: 'no se econtro reultado' ,
            value: request.term,
            id :-1
          }
        }
      });
    },
    minLength: 1,
    select: function( event, ui ) {
      if(ui.item.id != -1)
        showIframe("/empresas/"+ui.item.id+"/edit","Editar Empresa",960,600);
    },
    open: function() {
      $( this ).removeClass( "ui-corner-all" ).addClass( "ui-corner-top" );
    },
    close: function() {
      $( this ).removeClass( "ui-corner-top" ).addClass( "ui-corner-all" );
    }
  });
</script>
<br />
