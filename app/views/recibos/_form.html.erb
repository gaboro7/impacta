                  $( this ).dialog( "close" );
                }
              },
                open: function () {
                     $("#numero<%= @rand %>").focus();
                }
            });

          }
        });

      });

      $( this ).keypress(function(e){
          if(e.keyCode == conf_imp_key){
            <%if (@recibo.id!=nil)%>
              $("#imprimir<%= @rand %>").click();
            <%end%>
          }
      });

      $( "#dialog-confirm-imprimir<%= @rand %>" ).keydown(function (event) {
        if (event.keyCode == 13) {
            imprimir_recibo();
        }
