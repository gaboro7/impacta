  var conf_imp_key = 119; // tecla F8 para imprimir

  // visualizacion de listado de clientes
  // 0: e-> <id>e.nombre : s-> <id>s.nombre[s.empresa.nombre]
  // 1: e-> <id>e.nombre[e.direccion] : s-> <id>s.nombre[s.direcci√≥n]
