  <% if (@recibo.id!=nil) %>

      $("#anular<%= @rand %>").button();
      $("#anular<%= @rand %>").click(function(){
         $( "#anular<%= @rand %>" ).button( "disable" );
         $('#anular_dialog<%= @rand %>').html("Esta seguro que desea anular este documento.");
