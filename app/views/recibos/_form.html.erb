  var tipocambio = <%if (@recibo.id) %><%=  @recibo.moneda.tipodecambio  %><%else%>1<%end;%>;
  var sucursal_id =  <% if @recibo.sucursal == nil  %>-1 <% else %><%= @recibo.sucursal.id %><%end%>;

